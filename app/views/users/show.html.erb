<div class="row">
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, style: "max-width: 20%; height: auto; object-fit: contain;"%>
  <% end %>
  <div class="col-12 text-center" style="padding=20px; background-color: #f2f2f2 " >
    <h1><%= @user.username %></h1>
    <h4><%= @user.email %></h4>
    <h1><%= @user.bio %></h1>
  </div>
</div>
